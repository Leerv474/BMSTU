<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="classroom #"
            android:textAlignment="center"
            android:textColor="#1F1D1D"
            android:textColorLink="#000000"
            android:textSize="20dp" />

        <Spinner
            android:id="@+id/classroomSpinner"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="1" />
    </LinearLayout>

    <androidx.gridlayout.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp"
        app:columnCount="2">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="40dp"
            android:layout_height="60dp"
            android:background="@drawable/underline"
            android:gravity="clip_vertical"
            android:padding="5dp"
            android:text="МОЛ"
            android:textColor="#070707"
            android:textSize="16dp"
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_row="0" />

        <TextView
            android:id="@+id/admin_name"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:background="@drawable/underline"
            android:gravity="clip_vertical"
            android:padding="5dp"
            android:textColor="#070707"
            android:textSize="16dp"
            app:layout_column="1"
            app:layout_columnWeight="1"
            app:layout_row="0" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="40dp"
            android:layout_height="60dp"
            android:background="@drawable/underline"
            android:gravity="clip_vertical"
            android:padding="5dp"
            android:text="Площадь"
            android:textColor="#070707"
            android:textSize="16dp"
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_row="1" />

        <TextView
            android:id="@+id/square_area"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:background="@drawable/underline"
            android:gravity="clip_vertical"
            android:padding="5dp"
            android:textColor="#070707"
            android:textSize="16dp"
            app:layout_column="1"
            app:layout_columnWeight="1"
            app:layout_row="1" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="40dp"
            android:layout_height="60dp"
            android:background="@drawable/underline"
            android:gravity="clip_vertical"
            android:padding="5dp"
            android:text="Наличие сигнализации"
            android:textColor="#070707"
            android:textSize="16dp"
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_row="3" />

        <TextView
            android:id="@+id/is_siren_setup"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:background="@drawable/underline"
            android:gravity="clip_vertical"
            android:padding="5dp"
            android:textColor="#070707"
            android:textSize="16dp"
            app:layout_column="1"
            app:layout_columnWeight="1"
            app:layout_row="3" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="40dp"
            android:layout_height="60dp"
            android:background="@drawable/underline"
            android:gravity="clip_vertical"
            android:padding="5dp"
            android:text="Кол-во окон"
            android:textColor="#070707"
            android:textSize="16dp"
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_row="2" />

        <TextView
            android:id="@+id/textView16"
            android:layout_width="40dp"
            android:layout_height="60dp"
            android:background="@drawable/underline"
            android:gravity="clip_vertical"
            android:padding="5dp"
            android:text="Кол-во компьютеров"
            android:textColor="#070707"
            android:textSize="16dp"
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_row="5" />

        <TextView
            android:id="@+id/number_of_windows"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:background="@drawable/underline"
            android:gravity="clip_vertical"
            android:padding="5dp"
            android:textColor="#070707"
            android:textSize="16dp"
            app:layout_column="1"
            app:layout_columnWeight="1"
            app:layout_row="2" />

        <TextView
            android:id="@+id/number_of_pcs"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:background="@drawable/underline"
            android:gravity="clip_vertical"
            android:padding="5dp"
            android:textColor="#070707"
            android:textSize="16sp"
            app:layout_column="1"
            app:layout_columnWeight="1"
            app:layout_row="5" />

        <TextView
            android:id="@+id/textView14"
            android:layout_width="40dp"
            android:layout_height="60dp"
            android:background="@drawable/underline"
            android:gravity="clip_vertical"
            android:padding="5dp"
            android:text="Кол-во столов"
            android:textColor="#070707"
            android:textSize="16sp"
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_row="4" />

        <TextView
            android:id="@+id/number_of_tables"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:background="@drawable/underline"
            android:gravity="clip_vertical"
            android:padding="5dp"
            android:textColor="#070707"
            android:textSize="16sp"
            app:layout_column="1"
            app:layout_columnWeight="1"
            app:layout_row="4" />

    </androidx.gridlayout.widget.GridLayout>

</LinearLayout>